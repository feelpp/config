#%Module1.0#####################################################################
###
### Petsc 3.7.2 Module
###
proc ModulesHelp { } {
    global version prefix

    puts stderr "\tlibs/Petsc/3.7.2 - loads PETSc 3.7.2 module"
}

module-whatis   "Loads PETSc 3.7.2 and its environment"

# for Tcl script use only
set version     3.7.2
set prefix      $::env(FEELPP_PETSC372_PATH)

set libpath $prefix/lib
set binpath $prefix/bin
set includepath $prefix/include

prepend-path CMAKE_PREFIX_PATH $prefix
prepend-path PATH $binpath
prepend-path LD_LIBRARY_PATH $libpath
prepend-path PETSC_DIR $prefix
